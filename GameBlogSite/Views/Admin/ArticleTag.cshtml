@model GameBlogSite.Models.EntityFramework.Tag

@{
    ViewBag.Title = "İçerik Tagları";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        @using (Html.BeginForm("ArticleTag", "Admin", FormMethod.Post))
        {
            <div class="white-box">
                <div class="form-group">
                    <label for="exampleInputuname">Başlık</label>
                    <div class="input-group">
                        <div class="input-group-addon"><i class="ti-crown"></i></div>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Etiket Adı" })
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success waves-effect waves-light m-r-10">Ekle</button>
                    <a href="@Url.Action("Article","Admin")" class="btn btn-inverse waves-effect waves-light">Geri</a>
                </div>
            </div>
        }

        @Html.Action("TagList","Partial")
    </div>
</div>

