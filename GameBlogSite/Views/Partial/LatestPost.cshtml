@using GameBlogSite.Models.EntityFramework
@model List<Article>

<div class="single-widget-area mb-30">
    <!-- Title -->
    <div class="widget-title">
        <h6>Son Gönderiler</h6>
    </div>
    @foreach (var item in Model)
    {
        <div class="single-latest-post d-flex">
            <div class="post-thumb">
                <img src="@item.Image" alt="" style="width: 150px; height: auto;">
            </div>
            <div class="post-content">
                <a href="/Article/Index/@item.Id" class="post-title">
                    <h6>@item.Title</h6>
                </a>
                <a href="/Writer/Profile/@item.WriterId" class="post-author"><span>yazar</span> @item.Writer.Name @item.Writer.SurName</a>
            </div>
        </div>
    }
</div>
