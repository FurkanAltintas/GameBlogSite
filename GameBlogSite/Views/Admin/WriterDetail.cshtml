@model GameBlogSite.Models.EntityFramework.Writer 

@{
    ViewBag.Title = "Yazar Detay";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    int i = 1;
}

<div class="container-fluid">
    <!-- /.row -->
    <!-- .row -->
    <div class="row">
        <div class="col-md-4 col-xs-12">
            <div class="white-box">
                <div class="user-bg">
                    <img width="100%" alt="user" src="@Model.Image">
                </div>

                <div class="user-btm-box">
                    <!-- .row -->
                    <div class="row text-center m-t-10">
                        <div class="col-md-6 b-r"><strong>Ad Soyad</strong><p>@Model.Name @Model.SurName</p></div>
                        <div class="col-md-6"><strong>Meslek</strong><p>@Model.Designation</p></div>
                    </div>
                    <!-- /.row -->
                    <hr>
                    <!-- .row -->
                    <div class="row text-center m-t-10">
                        <div class="col-md-6 b-r"><strong>Email</strong><p>@Model.Email</p></div>
                        <div class="col-md-6"><strong>Telefon</strong><p>+123 456 789</p></div>
                    </div>
                    <!-- /.row -->
                    <hr>
                    <!-- .row -->
                    <div class="row text-center m-t-10">
                        <div class="col-md-12"><strong>Adres</strong><p>@Model.Address<br> </p></div>

                    </div>
                    <hr>
                    <!-- /.row -->
                    <div class="col-md-4 col-sm-4 text-center">
                        <p class="text-danger"><i class="ti-heart" data-toggle="tooltip" data-original-title="Beğeni Sayısı"></i></p>
                        <h1>@ViewBag.Like</h1>
                    </div>
                    <div class="col-md-4 col-sm-4 text-center">
                        <p class="text-blue"><i class="ti-write" data-toggle="tooltip" data-original-title="Makale Sayısı"></i></p>
                        <h1>@ViewBag.Article</h1>
                    </div>
                    <div class="col-md-4 col-sm-4 text-center">
                        <p class="text-primary"><i class="ti-timer" data-toggle="tooltip" data-original-title="Okunma Sayısı"></i></p>
                        <h1>@ViewBag.Reading</h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8 col-xs-12">
            <div class="white-box">
                <!-- .tabs -->
                <ul class="nav nav-tabs tabs customtab">
                    <li class="active tab"><a href="#home" data-toggle="tab"> <span class="visible-xs"><i class="fa fa-home"></i></span> <span class="hidden-xs">Aktiviteler</span> </a> </li>
                    <li class="tab"><a href="#profile" data-toggle="tab"> <span class="visible-xs"><i class="fa fa-user"></i></span> <span class="hidden-xs">Profil</span> </a> </li>
                    <li class="tab"><a href="#settings" data-toggle="tab" aria-expanded="false"> <span class="visible-xs"><i class="fa fa-cog"></i></span> <span class="hidden-xs">Detay</span> </a> </li>
                </ul>
                <!-- /.tabs -->
                <div class="tab-content">
                    <!-- .tabs 1 -->
                    @Html.Action("Activity","Partial")
                    <!-- /.tabs1 -->
                    <!-- .tabs2 -->
                    <div class="tab-pane" id="profile">
                        <div class="row">
                            <div class="col-md-3 col-xs-6 b-r">
                                <strong>Ad Soyad</strong> <br>
                                <p class="text-muted">@Model.SurName</p>
                            </div>
                            <div class="col-md-3 col-xs-6 b-r">
                                <strong>Telefon</strong> <br>
                                <p class="text-muted">@Model.Phone</p>
                            </div>
                            <div class="col-md-3 col-xs-6 b-r">
                                <strong>Email</strong> <br>
                                <p class="text-muted">@Model.Email</p>
                            </div>
                            <div class="col-md-3 col-xs-6">
                                <strong>Lokasyon</strong> <br>
                                <p class="text-muted">@Model.Address</p>
                            </div>
                        </div>
                        <hr>
                        <p class="m-t-30">@Model.About</p>
                        <h4 class="font-bold m-t-30">Yetenek Seti</h4>
                        <hr>
                        @Html.Action("SkillSet","Partial")
                    </div>
                    <!-- /.tabs2 -->
                    <!-- .tabs3 -->
                    @Html.Action("WriterDetail","Partial")
                    <!-- /.tabs3 -->
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->
    <!-- .right-sidebar -->
