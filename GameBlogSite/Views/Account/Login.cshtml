@model GameBlogSite.Models.EntityFramework.Writer

@{
    ViewBag.Title = "Giriş Yap";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal form-material" }))
{
    <h3 class="box-title m-b-20">Giriş Yap</h3>
    <div class="form-group ">
        <div class="col-xs-12">
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @required = "", @placeholder = "Email" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-12">
            @Html.PasswordFor(x => x.Password, new { @class = "form-control", @required = "", @placeholder = "Şifre" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <div class="checkbox checkbox-primary pull-left p-t-0">
                <input id="checkbox-signup" type="checkbox">
                <label for="checkbox-signup"> Beni Hatırla </label>
            </div>
            <a href="javascript:void(0)" id="to-recover" class="text-dark pull-right"><i class="fa fa-lock m-r-5"></i> Şifremi Unuttum?</a>
        </div>
    </div>
    <div class="form-group text-center m-t-20">
        <div class="col-xs-12">
            <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Giriş Yap</button>
        </div>
    </div>
    <div class="form-group m-b-0">
        <div class="col-sm-12 text-center">
            <p>Hesabınız yok mu? <a href="@Url.Action("Register","Account")" class="text-primary m-l-5"><b>Kaydol</b></a></p>
        </div>
    </div>
}







