@model GameBlogSite.Models.EntityFramework.Writer

<div class="tab-pane" id="settings">
    @using (Html.BeginForm("WriterDetail", "Partial", FormMethod.Post, new { @class = "form-horizontal form-material" }))
    {
        <div class="form-group">
            <label class="col-md-12">Ad</label>
            <div class="col-md-12">
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control form-control-line" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-12">Soyad</label>
            <div class="col-md-12">
                @Html.TextBoxFor(x => x.SurName, new { @class = "form-control form-control-line" })
            </div>
        </div>
        <div class="form-group">
            <label for="example-email" class="col-md-12">Email</label>
            <div class="col-md-12">
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control form-control-line", @type = "email" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-12">Şifre</label>
            <div class="col-md-12">
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control form-control-line", @type = "password", @value = "password" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-12">Telefon Numarası</label>
            <div class="col-md-12">
                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control form-control-line" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-12">Hakkında</label>
            <div class="col-md-12">
                @Html.TextAreaFor(x => x.About, 5, 1, new { @class = "form-control form-control-line" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-12">Ülke</label>
            <div class="col-sm-12">
                <select class="form-control form-control-line">
                    <option>London</option>
                    <option>India</option>
                    <option>Usa</option>
                    <option>Canada</option>
                    <option>Thailand</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <button class="btn btn-success">Profili Güncelle</button>
            </div>
        </div>
    }
</div>